<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <h2><%= post.title %></h2>
      <%= post.body %>
      <% if user_signed_in? %>
        <p><%= post.user.name %></p>
      <% end %>
      <br>
      <br>
    </li>
  <% end %>
</ul>

<%= link_to "New Post", new_post_path %>
<% if user_signed_in? %>
  <%= button_to "logout", destroy_user_session_path, method: :delete  %>
<% else %>
  <%= button_to "sign-in", new_user_session_path %>
<% end %>